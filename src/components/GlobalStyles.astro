<style is:global>
	* {
		tab-size: 2;
	}
	aside {
		border-right: 3px solid var(--colour6);
		border-bottom: 3px solid var(--colour6);
		border-left: 3px solid var(--colour6);
		padding: 0 1.5rem;
		font-size: 0.8rem;
		text-align: center;
	}
	figure {
		border: 3px solid var(--colour6);
		width: fit-content;
		max-width: 100%;
		float: center;
		margin-left: auto;
		margin-right: auto;
		text-align: center;
		font-size: smaller;
		display: flex;
		flex-direction: column;
	}
	figure div {
		margin: 0;
	}
	figcaption {
		padding: 0.25rem;
	}
	img {
		max-width: 100%;
	}
	i i {
		font-style: normal;
	}
	code {
		font-size: 0.9em;
	}
	pre {
		max-width: calc(100% - 1rem);
		overflow-x: auto;
		background-color: rgba(0, 0, 0, 0.1);
		border: 3px solid var(--colour6);
		padding: 0.5rem;
	}
	pre code,
	pre samp {
		padding-right: 0.5rem;
		background: none;
	}

	*:not(:lang(en)):not(li *) {
		font-style: italic;
	}
</style>
