---
import { addLinkBase } from '../utils'

export interface Props {
	showBlogHomeLink: boolean
}

const { showBlogHomeLink } = Astro.props
---

<footer style="view-transition-name: footer;">
	<ul>
		{
			showBlogHomeLink && (
				<li>
					<a href={addLinkBase()} title="Duncan Ritchie’s blog">
						Blog home
					</a>
				</li>
			)
		}
		<li>
			<a href={addLinkBase('rss.xml')} title="rss.xml">RSS</a>
		</li>
		<li>
			<a href="https://github.com/DuncanRitchie/blog" title="Code on GitHub">
				See the code
			</a>
		</li>
		<li>
			<a
				href="https://www.duncanritchie.co.uk/"
				title="Home — Duncan Ritchie’s portfolio"
			>
				By Duncan Ritchie
			</a>
		</li>
	</ul>
</footer>
